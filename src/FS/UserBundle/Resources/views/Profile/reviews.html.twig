{% extends "FSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

	{% for review in listReviews %}
		<div class="col-lg-12">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class ="pull-right">{{ macros.stars(review.mark,5) }}</div>
					<a href="{{ path('fs_platform_view', { 'id': review.product.id }) }}">{{ review.product.name }}</a> - {{ 'review'|trans }} #{{ review.id }}
				</div>
				<!-- /.panel-heading -->
				<div class="panel-body">
					{{ review.content }}
				</div>
				<!-- /.panel-body -->
				<div class="panel-footer">
					<div class="row">
						<div class="col-lg-offset-11">
							<a href="{{ path('fs_platform_review_edit', { 'id': review.id } ) }}"><span class="glyphicon glyphicon-edit"></span></a>
							<a href="{{ path('fs_platform_review_delete', { 'id': review.id } ) }}"><span class="glyphicon glyphicon-trash"></span></a>
						</div>
					</div>
				</div>
			</div>
			<!-- /.panel -->
		</div>
	{% endfor %}
	
{% endblock %}