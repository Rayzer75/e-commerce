{% extends "::layout.html.twig" %}

{% block content %}

	<div class="col-md-3">
		{% block menu %}
			{{ include("FSUserBundle:Profile:menu.html.twig") }}
		{% endblock %}
	</div>

	<div class="col-md-9">
		{% for key, messages in app.session.flashbag.all() %}
			{% for message in messages %}
				<div class="alert alert-{{ key }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
		{% block body %}
			{% block fos_user_content %}
			{% endblock fos_user_content %}
		{% endblock %}
	</div>

{% endblock %}